#!/bin/sh
set -eu

# NFS access is controlled by group membership
grep imageregion /etc/group || addgroup -g {{ idrnfs_groupid | default(1000) }} imageregion
# Use a non-root user (any should do)
grep imageregion /etc/passwd || adduser -D -u 1000 -G imageregion imageregion

exec su imageregion -c "cd /opt/ms; /opt/ms/bin/omero-ms-image-region $@"
